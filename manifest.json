{
  "manifest_version": 3,
  "name": "Article Assistant",
  "version": "1.3",
  "description": "Summarizes and chats with articles using the Gemini API.",
  "permissions": [
    "activeTab",
    "scripting",
    "sidePanel",
    "contextMenus",
    "storage"
  ],
  "icons": {
    "16": "icons/logo-16.png",
    "48": "icons/logo-48.png",
    "128": "icons/logo-128.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "Article Assistant",
    "default_icon": {
      "16": "icons/logo-16.png",
      "48": "icons/logo-48.png"
    }
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+S"
      },
      "description": "Start summarization"
    }
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "icons/send-icon.svg",
        "icons/speaker-icon.svg",
        "icons/stop-icon.svg",
        "icons/settings-icon.svg",
        "icons/copy-icon.svg",
        "icons/checkmark-icon.svg",
        "icons/globe-icon.svg",
        "lib/marked.min.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}