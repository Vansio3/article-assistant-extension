{
  "manifest_version": 3,
  "name": "Article Assistant",
  "version": "1.0",
  "description": "AI summaries for articles, PDFs & YouTube. Chat with content and fact-check claims with Gemini.",
  "homepage_url": "https://sites.google.com/view/article-assist-privacy-policy",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs"
  ],
  "icons": {
    "16": "icons/logo-16.png",
    "48": "icons/logo-48.png",
    "128": "icons/logo-128.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "Article Assistant",
    "default_icon": {
      "16": "icons/logo-16.png",
      "32": "icons/logo-32.png",
      "48": "icons/logo-48.png"
    }
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+S"
      },
      "description": "Start summarization"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [
        "icons/*",
        "lib/marked.min.js",
        "lib/pdf.js",
        "lib/pdf.worker.js",
        "lib/purify.min.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}