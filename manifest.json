{
  "manifest_version": 3,
  "name": "Article Assistant",
  "version": "1.5",
  "description": "Summarizes articles, PDFs, and video transcripts using the Gemini API.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs"
  ],
  "icons": {
    "16": "icons/logo-16.png",
    "48": "icons/logo-48.png",
    "128": "icons/logo-128.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "Article Assistant",
    "default_icon": {
      "16": "icons/logo-16.png",
      "48": "icons/logo-48.png"
    }
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+S"
      },
      "description": "Start summarization"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [
        "icons/*",
        "lib/marked.min.js",
        "lib/pdf.js",
        "lib/pdf.worker.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}